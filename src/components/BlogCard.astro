---
const { title, summary, date, slug } = Astro.props;
---

<a href={`/blog/${slug}`} class="blog-card">
  <h3>{title}</h3>
  <p class="summary">{summary}</p>
  <span class="date">{date}</span>
</a>

<style>
  .blog-card {
    display: block;
    padding: 1.25rem;
    border-radius: 10px;
    background-color: #f9f9f9;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s;
  }

  .blog-card:hover {
    background-color: #ececec;
  }

  .blog-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
    color: #004488;
  }

  .summary {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 0.5rem;
  }

  .date {
    font-size: 0.75rem;
    color: #999;
  }
</style>
